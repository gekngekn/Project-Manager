<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml/1" minHeight="300.0" minWidth="400.0" xmlns="http://javafx.com/javafx/19"
            fx:controller="com.gekn.productivityapp.AddProjectDialogController">
    <children>
        <VBox alignment="CENTER" layoutX="131.0" layoutY="50.0" prefHeight="200.0" prefWidth="100.0"
              AnchorPane.bottomAnchor="5.0" AnchorPane.leftAnchor="5.0" AnchorPane.rightAnchor="5.0"
              AnchorPane.topAnchor="5.0">
            <children>
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Create Project"/>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Name"/>
                        <TextField fx:id="tfName" HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets right="30.0"/>
                    </padding>
                </HBox>
                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Desc"/>
                        <TextField fx:id="tfDesc" HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets right="30.0"/>
                    </padding>
                </HBox>

                <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0" spacing="10.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" minWidth="100.0" text="Status"/>
                        <TextField fx:id="tfStatus" HBox.hgrow="ALWAYS"/>
                    </children>
                    <padding>
                        <Insets right="30.0"/>
                    </padding>
                </HBox>

                <HBox alignment="CENTER_RIGHT" spacing="10.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#closeStage" text="Close"/>
                        <Button mnemonicParsing="false" onAction="#btnAddNewProject" text="Add"/>
                    </children>
                    <opaqueInsets>
                        <Insets/>
                    </opaqueInsets>
                    <padding>
                        <Insets right="30.0"/>
                    </padding>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
